<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dbm0204.assignment161.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:hint=" Enter Data"
        android:textSize="20dp"
        android:background="@drawable/menu"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/file_data_et" />

    <Button
        android:text="Add Data"
        android:textSize="20dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/add_data_btn"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/file_data_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="No data Inseted in File"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/add_data_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/file_data_tv" />


    <Button
        android:text="Delete File"
        android:textSize="20dp"
        android:textColor="#fff"
        android:typeface="serif"
        android:textStyle="bold"
        android:background="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/delete_data_btn"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/file_data_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
